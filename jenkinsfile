pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/YASHHARMALKAR/DevOps_Project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // On Windows agents, use 'bat'
                    bat 'set DOCKER_BUILDKIT=0 && docker build -t devops-node-app:latest .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                // First, stop and remove any old container (optional but recommended)
                bat '''
                    docker stop devopscontainer || exit 0
                    docker rm devopscontainer || exit 0
                    docker run -d -p 8082:4000 --name devopscontainer devops-node-app:latest
                '''
            }
        }
    }

    post {
        success {
            echo 'üöÄ Deployment successful!'
        }
        failure {
            echo '‚ùå Deployment failed.'
        }
    }
}
